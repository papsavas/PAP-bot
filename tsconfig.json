{
  "compilerOptions": {
    "outDir": "./dist",
    "experimentalDecorators": true,
    "target": "ES2019",
    "module": "CommonJS",
    "strict": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "lib": [
      "ES2018"
    ],
    "resolveJsonModule": true,
    "baseUrl": "./",
  }
}